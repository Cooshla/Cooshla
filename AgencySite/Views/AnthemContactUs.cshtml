@inherits Vega.USiteBuilder.UmbracoTemplatePageBase<AgencySite.DocumentTypes.AnthemContact>
@{
    Layout = "~/views/AnthemThemeTopMaster.cshtml";
}

<!-- first-block -->
<div class="first-block">
</div>
<!-- img header -->
<section class="page-header img-section dark" style="background-image:url(preview/1550px.png);">
    <div class="content-block black-tint">
        <!-- #crumbs for page title bar and top navigation -->
        <div id="crumbs" class="abs dark">
            <div class="row large dark">
                <!-- page title/statement -->
                <h6 class="sub-heading"><a href=""><span>HOME</span></a>&nbsp; / &nbsp; CONTACT US</h6>
            </div>
        </div>
        <!-- page statement -->
        <div class="row midtoppadding">
            <div class="twelve columns text-center">
                <h1 class="block-heading">GET IN TOUCH WITH US <br /><span class="light">@Model.Phone</span></h1>
            </div>
        </div>
    </div>
</section>
<section class="grey stripe-bg">



    <!-- two third / left side -->
    <div class="two-third white">
        <div id="contact-page">
            <div class="content-block">
                <div class="row">
                    <!-- page title / description -->
                    <h3 class="bold">@Model.Header</h3>
                    <h4>@Model.Greeting</h4>
                    <hr class="thin grey">
                </div>
                <div class="row">
                    <!-- contact form -->
                    <form method="post" action="#" id="contact-form">
                        <ul>
                            <li>
                                <p>
                                    * All fields are required.
                                </p>
                            </li>
                            <li class="field"><input class="input" type="text" placeholder="Your Name" name="name" id="your-name"></li>
                            <li class="field"><input class="input" type="email" placeholder="Your Email" name="email" id="your-email"></li>
                            <li class="field"><input class="input" type="text" placeholder="Subject" name="subject" id="your-subject"></li>
                            <li class="field"><textarea class="input textarea" placeholder="Your Message" rows="4" name="message" id="your-message"></textarea></li>
                            <li>
                                <!-- submit button -->
                                <input value="SUBMIT FORM" class="purple submit" id="submit" name="submit" type="submit">
                            </li>
                        </ul>
                    </form>
                    <div id="email-msg">
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- one third sidebar -->
    <aside class="one-third grey">
        <!-- map -->
        <div id="map">
        </div>
        <div id="sidebar">
            <!-- contact widget -->
            <div class="widget">
                <h5 class="stripe-heading">COME FIND US</h5>
                <div class="widget-content">
                    <p class="contact-info">
                        @Model.Address
                        <i class="fa fa-phone"></i>@Model.Phone<br>
                        <i class="fa fa-envelope-o"></i>@Model.Email
                    </p>
                </div>
            </div>
        </div>
    </aside>
    <!-- clear floats -->
    <div class="clear">
    </div>
</section>